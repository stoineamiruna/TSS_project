<section class="p-4 max-w-4xl mx-auto">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-primary p-3 rounded-lg text-center mb-5" role="alert">
            @ViewBag.Message
        </div>
    }

    <h2 class="text-center text-3xl font-bold mb-8">
        Leaderboard <i class="bi bi-trophy text-warning"></i>
    </h2>

    <div class="bg-light p-4 rounded-lg shadow-sm mb-8">
        <form method="GET" class="w-100">
            <div class="input-group">
                <input type="text" class="form-control form-control-lg"
                       placeholder="Search by username" name="search"
                       value="@ViewBag.SearchString">
                <button class="btn btn-primary px-4" type="submit">
                    <i class="bi bi-search me-2"></i> Search
                </button>
            </div>
        </form>
    </div>

    <div class="d-flex flex-column gap-4">
        @{
            int counter = 1;
        }
        @foreach (var user in ViewBag.Users)
        {
            <div class="card hover-shadow transition">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div class="d-flex align-items-center gap-4">
                        @if (counter <= 3)
                        {
                            <span class="fs-1 fw-bold @(counter == 1 ? "text-warning" : counter == 2 ? "text-secondary" : "text-bronze")"
                                  style="text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
                                #@counter
                            </span>
                        }
                        else
                        {
                            <span class="fs-3 fw-bold text-muted">#@counter</span>
                        }

                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-light rounded-circle p-3">
                                <i class="bi bi-person fs-4"></i>
                            </div>
                            <h3 class="card-title m-0 fs-4">@user.FirstName @user.LastName</h3>
                        </div>
                    </div>
                    <a class="btn btn-primary px-4" href="/ApplicationUsers/Show/@user.Id">View Profile</a>
                </div>
            </div>
            counter++;
        }
    </div>
</section>

<style>
    .text-bronze {
        color: #CD7F32;
    }

    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .transition {
        transition: all 0.2s ease-in-out;
    }
</style>