@model List<Developer_Toolbox.Models.Activity>

<section class="p-3">
    @if (TempData.ContainsKey("message"))
    {
        <h4 class="@ViewBag.MessageType p-3 rounded-3 text-center mb-5">@ViewBag.Message</h4>
    }
    <br />

    <form method="post" action="/Activities/Edit">

        <div class="d-flex justify-content-end">
            <button class="btn btn-outline" style="background-color:#0d6efd; color:white;" type="submit">Save changes</button>
        </div>

        <hr />

        <h2 class="text-center"> Activities <i class="bi bi-clipboard2-check-fill"></i> </h2>
        <br />

        <div class="d-flex flex-column gap-2 align-content-center justify-content-center align-items-center">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="card w-75">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h3 class="card-title primary py-3 px-3 rounded-2"> @Model[i].Description</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            @Html.HiddenFor(m => m[i].Id, null)
                            @Html.HiddenFor(m => m[i].Description, null)
                            @Html.EditorFor(m => m[i].ReputationPoints, null, new { @class = "form-control" }) 🏅
                        </div>
                    </div>
                </div>
            }
        </div>

    </form>

</section>