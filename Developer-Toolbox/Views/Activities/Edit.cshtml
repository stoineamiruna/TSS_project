@model List<Developer_Toolbox.Models.Activity>
<link rel="stylesheet" href="~/css/feature_section.css" asp-append-version="true" />

<section class="p-3">
    @if (TempData.ContainsKey("message"))
    {
        <h4 class="@ViewBag.MessageType p-3 rounded-3 text-center mb-5">@ViewBag.Message</h4>
    }
    <br />

    <form method="post" action="/Activities/Edit">

        <div class="d-flex justify-content-end">
            <button class="btn btn-outline" style="background-color:#0d6efd; color:white;" type="submit">Save changes</button>
        </div>

        <hr />

        <h2 class="text-center"> Activities <i class="bi bi-clipboard2-check-fill"></i> </h2>
        <br />

        <div class="d-flex flex-column gap-2 align-content-center justify-content-center align-items-center">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="card w-75">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h3 class="card-title primary py-3 px-3 rounded-2"> @Model[i].Description</h3>
                        <div class="d-flex  flex-column">
                            @Html.HiddenFor(m => m[i].Id, null)
                            @Html.HiddenFor(m => m[i].Description, null)
                            <div class="d-flex align-self-end">
                                @Html.EditorFor(m => m[i].ReputationPoints, null, new { @class = "form-control" }) 🏅
                            </div>
                            @Html.ValidationMessageFor(m => m[i].ReputationPoints, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }
        </div>

    </form>

</section>



<section class="features-area features-one">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center">
                    <h3 class="title">Rewarded Activities</h3>
                </div>
                <!-- row -->
            </div>
        </div>
        <!-- row -->
        <form method="post" action="/Activities/Edit">
            <div class="container py-5">
                <div class="d-flex flex-column gap-2 align-content-center justify-content-center align-items-center">
                
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="card w-75">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <h3 class="card-title primary py-3 px-3 rounded-2"> @Model[i].Description</h3>
                                <div class="d-flex  flex-column">
                                    @Html.HiddenFor(m => m[i].Id, null)
                                    @Html.HiddenFor(m => m[i].Description, null)
                                    <div class="d-flex align-self-end">
                                        @Html.EditorFor(m => m[i].ReputationPoints, null, new { @class = "form-control" }) 🏅
                                    </div>
                                    @Html.ValidationMessageFor(m => m[i].ReputationPoints, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Submit Button -->
                    <div class="text-center pt-3 ">
                        <button type="submit" class="btn btn-primary btn-lg">Save changes</button>
                        <div id="formFeedback" class="mt-3"></div>
                    </div>
                
                </div>
                
            </div>
        </form>
    </div>
    <!-- container -->
</section>
