<link rel="stylesheet" href="~/css/feature_section.css" asp-append-version="true" />

<section class="features-area features-one">
    @if (TempData.ContainsKey("message"))
    {
        <h4 class="@ViewBag.MessageType p-3 rounded-3 text-center mb-5">@ViewBag.Message</h4>
    }
    <br />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center">
                    <h3 class="title">Rewarded Activities</h3>     
                </div>
                <!-- row -->
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col d-flex justify-content-end" style="margin-right: 2%">

                @if (ViewBag.EsteAdmin)
                {
                    <a class="btn btn-outline-primary py-sm-3 px-sm-4 rounded-pill me-3" style="font-weight:bold;" href="/Activities/Edit" role="button"> + Edit rewards</a>
                }
            </div>
        </div>
        <!-- row -->
        <div class="container py-5">
            <div class="d-flex flex-column gap-2 align-content-center justify-content-center align-items-center">
                @foreach (var activity in ViewBag.Activities)
                {

                    <div class="card w-75">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h3 class="card-title primary py-3 px-3 rounded-2"> @activity.Description</h3>
                            <h3 class="card-title primary py-3 px-3 rounded-2"> @activity.ReputationPoints 🏅 </h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- container -->
</section>
