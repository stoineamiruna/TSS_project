@{
    ViewBag.Title = "Edit";
}s

<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Edit answer</h3>
                    <form method="post" enctype="multipart/form-data" action="/Answers/Edit/@ViewBag.Answer.Id">
                        <div class="mb-3">
                            <textarea class="form-control" name="Content">@ViewBag.Answer.Content</textarea>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Save changes</button>
                            <div id="formFeedback" class="mt-3"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
