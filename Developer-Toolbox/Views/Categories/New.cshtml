@model Developer_Toolbox.Models.Category

<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

@if (TempData.ContainsKey("message"))
{
    <h4 class="@ViewBag.MessageType p-3 rounded-3 text-center mb-5">@ViewBag.Message</h4>
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Add new category</h3>
                    <form method="post" enctype="multipart/form-data" action="/Categories/New">
                        <div class="mb-3">
                            @Html.Label("CategoryName", "Category Name")

                            @Html.TextBox("CategoryName", null, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.CategoryName, null, new{ @class = "text-danger"})
                        </div>
                        <div class="mb-3">
                            <div>
                                <label for="file" class="form-label">Upload Logo</label>
                                <input type="file" class="form-control" id="file" name="file"/>
                                @Html.ValidationMessage("Logo", null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            <div id="formFeedback" class="mt-3"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>