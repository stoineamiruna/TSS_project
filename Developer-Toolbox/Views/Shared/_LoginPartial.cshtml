@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="btn btn-light py-sm-3 px-sm-3 rounded-pill me-3" style="font-weight:bold; font-size: 14px; text-transform:initial;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-light py-sm-3 px-sm-3 rounded-pill" style="font-weight:bold; font-size: 14px; text-transform:initial;">Log out</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="btn btn-outline-light py-sm-3 px-sm-3 rounded-pill" style="font-weight:bold; font-size: 14px; text-transform:initial;" asp-area="Identity" asp-page="/Account/Login">Log in</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-light py-sm-3 px-sm-3 rounded-pill me-3" style="font-weight:bold; font-size:14px; text-transform:initial;" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
        </li>
}
</ul>
