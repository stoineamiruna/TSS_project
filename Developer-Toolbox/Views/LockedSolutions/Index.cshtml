
<link rel="stylesheet" href="~/css/submissions.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/feature_section.css" asp-append-version="true" />



<section class="features-area features-one" style="min-height: 100vh">
    @if (TempData.ContainsKey("message"))
    {
        <h4 class="alert @ViewBag.MessageType p-3 rounded-3 text-center mb-5">@ViewBag.Message</h4>
    }
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center">
                    <h3 class="title">My submissions</h3>
                </div>
                <!-- row -->
            </div>
        </div>
        <!-- row -->
        <div class="container py-5">
            <div class="row g-5 d-flex justify-content-start">
                @if (ViewBag.Solutions != null && ViewBag.Solutions.Count > 0)
                {
                    @foreach (var solution in ViewBag.Solutions)
                    {
                        <div class="col" style="max-width: fit-content">
                            <div class="card submission-card border-0 rounded-4 shadow-sm">
                                <div class="card-body p-4 d-flex flex-column justify-content-around">
                                    <h5 class="card-title mb-3 fw-bold text-center">@solution.LockedExercise.Title</h5>
                                    <p class="card-text text-center text-muted mb-4">
                                        Score: @solution.Score %
                                    </p>

                                    <div style="display:flex; justify-content: space-between;">
                                        <form method="post" asp-action="Delete" asp-controller="LockedSolutions" asp-route-id="@solution.Id">
                                            <button type="submit" class="btn btn-no-outline">
                                                <i class="lni lni-trash-can" style="font-size: x-large; color: var(--primary)"></i>
                                            </button>
                                        </form>
                                        <a class="btn btn-outline-primary py-2 px-5 rounded-pill" style="font-weight: bold"
                                           asp-action="Show" asp-controller="LockedSolutions" asp-route-id="@solution.Id">
                                            Show
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="fs-5 text-black text-center">You have no submissions yet.</p>
                }
            </div>
        </div>
    </div>

</section>
