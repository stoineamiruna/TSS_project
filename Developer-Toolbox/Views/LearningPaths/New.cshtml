@model Developer_Toolbox.Models.LearningPath

@{
    ViewBag.Title = "Create New Learning Path";
}
<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Create New Learning Path</h3>
                    <form method="post" action="/LearningPaths/New">
                        <div class="mb-3">
                            @Html.Label("Name", "Name")
                            @Html.TextBox("Name", null, new { @class = "form-control" })
                            @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.Label("Description", "Description")
                            @Html.TextArea("Description", null, new { @class = "form-control" })
                            @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            <div id="formFeedback" class="mt-3"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







