@{
    ViewData["Title"] = "Project Vulnerability Scan";
}

<div class="container">
    <h2>Project Vulnerability Scan</h2>
    <p class="lead">Scan your entire .NET MVC project for security vulnerabilities.</p>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <p>This scan will analyze all C# files in your project to detect potential security vulnerabilities.</p>
                    <p><strong>Note:</strong> Depending on your project size, this scan might take several minutes to complete.</p>

                    <form asp-action="ScanProject" method="post">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-search"></i> Start Full Project Scan
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>